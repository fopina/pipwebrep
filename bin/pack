#!/bin/bash


cd `dirname $0`
. conf
cd ..

[ -d dist ] || mkdir dist

if [ ! -e src/WEB-INF/lib/jython.jar ]; then
	echo "jython.jar not found, downloading..."
	echo
	curl -o src/WEB-INF/lib/jython.jar -O "${JYTHONURL}" || exit 1
fi

(cd src && jar cvf "../dist/$WAR" .) > /dev/null

if [ "$?" == "0" ]; then
	echo
	echo Packing was successful
	ls -la "dist/$WAR"
else
	echo
	echo "ERROR"
fi
#!/bin/bash


cd `dirname $0`
. conf
cd ..

[ -d dist ] || mkdir dist

if [ ! -e src/WEB-INF/lib/jython.jar ]; then
	echo "jython.jar not found, downloading..."
	echo
	curl -o src/WEB-INF/lib/jython.jar -O "${JYTHONURL}" || exit 1
fi

GITVERSION=`git rev-list --count HEAD`

cat <<EOF > src/gitversion.py
# file generated automatically, do not edit
VERSION = ${GITVERSION}
EOF

cd src
jar cf "../dist/$WAR" `find . -not -name \*.pyc -not -name \*\$py.class -not -name \*.ig.py -not -name \*_test.py -not -type d` > /dev/null
cd ..

if [ "$?" == "0" ]; then
	echo
	echo "Packing was successful (v${GITVERSION})"
	ls -la "dist/$WAR"
else
	echo
	echo "ERROR"
fi